{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "league": { "type": "string" },
    "season": { "type": "string" },
    "fixtures": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "date": { "type": "string", "format": "date" },
          "home_team": { "type": "string" },
          "away_team": { "type": "string" },
          "time": { "type": "string" },
          "home_score": { "type": ["integer", "null"] },
          "away_score": { "type": ["integer", "null"] },
          "home_scorers": { "type": ["array", "null"], "items": { "type": "string" } },
          "away_scorers": { "type": ["array", "null"], "items": { "type": "string" } }
        },
        "required": ["date", "home_team", "away_team"],
        "additionalProperties": false 
      }
    }
  },
  "required": ["league", "season", "fixtures"],
  "additionalProperties": false 
}